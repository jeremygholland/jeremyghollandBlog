<!doctype html>
<html ng-app = "app">
    <head>
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Untitled</title>
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.2/angular.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.14/angular-ui-router.js"></script>
        <link rel="author" href="humans.txt">
    </head>
    <body ng-controller = "mainCtrl">
    	<div ui-view></div>



        <script src="/javascripts/angularApp.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

        <script type = "text/ng-template" id ="/home.html">
        <div ng-repeat = "post in posts">
            <a href="#/posts/{{post._id}}"> <h1>{{post.title}}</h1></a>
            <p>{{post.body}}</p>
            <p>{{post.author}}</p>

        </div>

        <div>
            <a ui-sref = "addPost"><button><p>Add post?</p></button></a>
        </div>
        </script>

        <script type = "text/ng-template" id ="/post.html">
        <div>
            <h1> {{post.title}}</h1>
            <p>{{post.body}}</p>
            <p>{{post.author}}</p>
        </div>
        </script>

        <script type = "text/ng-template" id ="/addPost.html">
        <div>
            <input type="text" placeholder = "title" ng-model = "title">
            <input type="text" placeholder= "what's on your mind" ng-model= "body">
            <input type="text" placeholder="author" ng-model = "author">
            <a ui-sref="home"><button ng-click = "addPost()">submit</button></a>
        </div>
        </script>

    </body>
</html>